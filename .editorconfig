# EditorConfig for Filipa project
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
quote_type = double

[*.{js,ts,svelte}]
quote_type = double

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_size = 2